<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/design_default_color_primary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.125"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:background="@color/design_default_color_primary">

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:background="@drawable/radio_button_bg"
        android:buttonTint="@color/design_default_color_primary"
        android:gravity="center">

        <TextView
            android:id="@+id/tvprofilepic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Profile Picture"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="22dp">

        </TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:background="@drawable/radio_button_bg"
        android:buttonTint="@color/design_default_color_primary"
        android:gravity="center">

        <TextView
            android:id="@+id/tvpersonaldetails"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Personal Details"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="22dp">

        </TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:background="@drawable/radio_button_bg"
        android:buttonTint="@color/design_default_color_primary"
        android:gravity="center">

        <TextView
            android:id="@+id/tvsummary"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Summary"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="22dp">

        </TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:background="@drawable/radio_button_bg"
        android:buttonTint="@color/design_default_color_primary"
        android:gravity="center">
        <TextView
            android:id="@+id/tveduction"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:gravity="center"
            android:text="Education"
            android:textColor="@color/black"
            android:textSize="22dp">

        </TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:background="@drawable/radio_button_bg"
        android:buttonTint="@color/design_default_color_primary"
        android:gravity="center">
        <TextView
            android:id="@+id/tvexperience"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:gravity="center"
            android:text="Experience"
            android:textColor="@color/black"
            android:textSize="22dp">

        </TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:background="@drawable/radio_button_bg"
        android:buttonTint="@color/design_default_color_primary"
        android:gravity="center">
        <TextView
            android:id="@+id/tvcertification"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:gravity="center"
            android:text="Certification"
            android:textColor="@color/black"
            android:textSize="22dp">

        </TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:background="@drawable/radio_button_bg"
        android:buttonTint="@color/design_default_color_primary"
        android:gravity="center">
        <TextView
            android:id="@+id/tvreference"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:gravity="center"
            android:text="Reference"
            android:textColor="@color/black"
            android:textSize="22dp">

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.125"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:background="@color/design_default_color_primary">

    </LinearLayout>

</LinearLayout>
